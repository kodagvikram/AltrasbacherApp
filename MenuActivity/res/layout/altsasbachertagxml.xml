<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Mapmainscrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    
    <RelativeLayout
        android:id="@+id/altstagmainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout 
    android:id="@+id/altstagDatelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4a688f"
    >
    <TextView 
        android:id="@+id/altstagDatetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />
    
</RelativeLayout>
       <ListView 
           android:id="@+id/altstaglistview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/altstagDatelayout"
           ></ListView>
       
        <RelativeLayout 
    android:id="@+id/altstagDatelayout2"
    android:layout_below="@+id/altstaglistview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4a688f"
    >
    <TextView 
        android:id="@+id/altstagDatetextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        />
    
</RelativeLayout>
       <ListView 
           android:id="@+id/altstaglistview2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/altstagDatelayout2"
           ></ListView>
       
        
    </RelativeLayout>
    
</ScrollView>
