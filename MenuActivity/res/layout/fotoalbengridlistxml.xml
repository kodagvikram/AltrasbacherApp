<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false" >

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false" >
        

        <RelativeLayout
            android:id="@+id/rotetionlayout"
            android:layout_width="wrap_content"
           android:layout_height="110dp"
              android:background="@drawable/fotoborderxml"
              android:clipChildren="false"
            >
             <RelativeLayout
            android:layout_width="550dp"
            android:layout_height="110dp"
            android:clipChildren="false"
            >
              <ImageView
            android:id="@+id/fotoalbenImageview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:adjustViewBounds="false"
          android:clipChildren="false"
            />
           </RelativeLayout>         
               <RelativeLayout
            android:layout_width="550dp"
            android:layout_height="110dp"
             android:rotation="0"
             android:background="@drawable/fotoborderxml"
            >
        <ImageView
            android:id="@+id/fotoalbenImageview"
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            />

        <ProgressBar
            android:id="@+id/GridprogressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fotoalbenImageview"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
             />

        </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/fotoalbentitletextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rotetionlayout"
            android:padding="5dp"
            android:text="fotoalben1  title "
            android:fontFamily="sans-serif-light"
            android:textSize="14sp" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>