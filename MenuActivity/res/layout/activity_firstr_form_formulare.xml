<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PDFActivity" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/layoutscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/nevigationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/lightborder"
                >
                <Button
                    android:id="@+id/EditedPDFbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ausgefüllte\nPDF speichern"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:textColor="#FFFFFF"
                   android:background="@drawable/rounded_button_xml"
                    />
                
                 <Button
                    android:id="@+id/EnptyPDFbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/EditedPDFbtn"
                    android:layout_centerVertical="true"
                    android:text="Leere PDF\nspeichern"
                    android:layout_marginRight="7dp"
                    android:textColor="#FFFFFF"
                     android:background="@drawable/rounded_button_xml"
                    />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nevigationLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textViewnew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Vereinigung der Altsasbacher und Förderverein e.V."
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewnew"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Beitrittserklärung"
                    android:textSize="19dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center" >
                
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hiermit erkläre ich meinen Beitritt zur Vereinigung der Altsasbacher und Förderverein e.V.\n\nDer satzungsgemäße Mindestbeitrag beträgt für im Erwerbsleben stehende Mitglieder 25 EUR pro Jahr.\nDer Beitrag für Schüler, Auszubildende und Rentner beträgt 10 EUR pro Jahr."
                    android:textSize="11dp" />

               <TextView
                    android:id="@+id/mynew100textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/textView2"
                    android:text="Mein Beitrag über "
                    android:textSize="11dp" />
                
                
                
                <EditText
                    android:id="@+id/edittext"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_toRightOf="@+id/mynew100textView2"
                    android:background="#c9ecf8"
                    android:inputType="text" />
                
                
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_toRightOf="@+id/edittext"
                    android:text=" EUR wird jährlich zum 05. Dezember per Lastschrift eingezogen."
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textViewname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Name :"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittextname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="08dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textViewname"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textViewstrabe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Straße :"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittextstrabe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="06dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textViewstrabe"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textViewOrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ort :"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittextort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textViewOrt"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textViewtelefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Telefon :"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittexttelefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textViewtelefon"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textViewemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="eMail :"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittextemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textViewemail"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textViewheder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SEPA-Lastschriftmandat"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewheder"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Wiederkehrende Zahlungen/Recurrent Payments"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gläubiger-Identifikationsnummer:"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/mynewtextView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/textView7"
                    android:text="DE27ZZZ00000725722 Mandatsreferenz: "
                    android:textSize="11dp" />
                
                
                <EditText
                    android:id="@+id/edittext7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/mynewtextView7"
                     android:layout_below="@+id/textView7"
                    android:background="#000080"
                    android:inputType="text"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout8"
               
                 >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ich ermächtige (Wir ermächtigen) die Vereinigung der Altsasbacher und Förderverein e. V., Zahlungen von meinem (unserem) Konto mittels Lastschrift einzuziehen. Zugleich weise ich mein (weisen wir unser) Kreditinstitut an, die von der Vereinigung der Altsasbacher und Förderverein e.V. auf mein (unser) Konto gezogenen Lastschriften einzulösen.\n\nHinweis: Ich kann innerhalb von acht Wochen, beginnend mit dem Belastungsdatum, die\nErstattung des belasteten Betrages verlangen. Es gelten dabei die mit meinem Kreditinstitut\nvereinbarten Bedingungen."
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kreditinstitut:"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittext10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="01dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textView10"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout11"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="IBAN:"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittext11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textView11"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout12"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BIC:"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/edittext13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="49dp"
                    android:layout_marginRight="100dp"
                    android:layout_toRightOf="@+id/textView13"
                    android:background="#c9ecf8"
                    android:inputType="text" />
            </RelativeLayout>
            
             <RelativeLayout
                android:id="@+id/UNDERLINELAYOUT"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/mainlayout13"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="200dp"
                android:layout_marginTop="50dp" 
                android:background="@drawable/bottomlinelayout"
                />
            <RelativeLayout
                android:id="@+id/mainlayout14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UNDERLINELAYOUT"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Datum, Ort) (Unterschrift)"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mainlayout15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlayout14"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center" >
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>