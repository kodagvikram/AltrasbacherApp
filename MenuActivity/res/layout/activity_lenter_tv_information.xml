<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LenterTvInformationActivity"
   
     >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        
        <RelativeLayout 
            android:id="@+id/lendertvtitlelayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            >
            <Button
                android:id="@+id/lendertvsharebtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
               android:layout_centerVertical="true"
               android:layout_marginRight="10dp"
                android:background="@drawable/compose"
                android:layout_alignParentRight="true"
                ></Button>
            
        </RelativeLayout>
        
        <ImageView
            android:id="@+id/LendertvBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/lendertvtitlelayout"
            ></ImageView>
        
       <WebView
        android:id="@+id/LenderTVwebView"
        android:layout_below="@+id/LendertvBackgroundImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       />
          <Button
              android:id="@+id/lenderinfoplaybtn"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_alignTop="@+id/LendertvBackgroundImage"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="60dp"
              android:background="@drawable/playbuttonicon" />

          <ProgressBar
              android:id="@+id/LenderTVProgressBar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@+id/lenderinfoplaybtn"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="48dp" 
              android:visibility="gone"
              />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
