<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
           <gradient android:angle="90" android:centerColor="#faf9f9" android:endColor="#faf9f9" android:startColor="#faf9f9" />

            <stroke android:width="2dp" android:color="#91a3b0" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="2dp" />

             <corners android:radius="10px"/>
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#faf9f9" android:endColor="#faf9f9" android:startColor="#faf9f9" />

            <stroke android:width="1dp" android:color="#FFFFFF" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="2dp" />

            <corners android:radius="10px"/>
        </shape></item>

</selector>